
.listLeft{
	height: 150px;
	margin-left: 10px ;
	color: #FFFFFF;
	width: 150px;
}
.author{
	height: 35px;
	line-height: 35px;
	font-size: 17px;
}
.title{

	line-height: 20px;
	font-size: 15px;
	width: 100%;
	word-wrap: break-word;
}
.box{
	width: 100px;
	overflow: hidden;
}
.music{
	height: 35px;
	line-height: 35px;
	font-size: 15px;
	width: 200px;
	-webkit-animation: music 4s linear 0.2s infinite;
	        animation: music 4s linear 0.2s infinite;
}
@-webkit-keyframes music{
0%{
		-webkit-transform: translate3d(80%,0,0);
		        transform: translate3d(80%,0,0);
}
100%{
		-webkit-transform: translate3d(-80%,0,0);
		        transform: translate3d(-80%,0,0);
}
}
@keyframes music{
0%{
		-webkit-transform: translate3d(80%,0,0);
		        transform: translate3d(80%,0,0);
}
100%{
		-webkit-transform: translate3d(-80%,0,0);
		        transform: translate3d(-80%,0,0);
}
}

